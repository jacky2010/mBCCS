<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.viettel.mbccs.widget.CustomTextView
        android:id="@+id/tv_title"
        style="@style/InstallAddressTv"
        android:text="@string/msg_default_choose_time_trans"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:id="@+id/view_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_item_spin_text"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/bg_border"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5" />


        <ImageView
            android:id="@+id/iv_icon_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5" />

        <!--<RelativeLayout-->
        <!--android:id="@+id/frame"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_toLeftOf="@+id/iv_icon_right"-->
        <!--android:layout_toRightOf="@+id/iv_icon_left">-->

        <!--<com.viettel.mbccs.widget.CustomTextView-->
        <!--android:id="@+id/tv_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center|start"-->
        <!--android:layout_marginLeft="@dimen/dp_5"-->
        <!--android:visibility="visible" />-->

        <com.viettel.mbccs.widget.CustomEditText
            android:id="@+id/spinner"
            style="@style/edit_main_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_toLeftOf="@+id/iv_icon_right"
            android:layout_toRightOf="@+id/iv_icon_left"
            android:maxLines="1"
            android:singleLine="true"
            app:hint="EditSpinnerTest" />


        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_item_spin_text"
            android:layout_gravity="center|start" />

        <!--</RelativeLayout>-->

    </RelativeLayout>
</LinearLayout>